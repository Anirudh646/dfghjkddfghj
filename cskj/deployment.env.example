# Production Environment Variables
# Copy this to .env and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=your_secure_mongodb_password
REDIS_PASSWORD=your_secure_redis_password

# Application Security
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters
DEBUG=false

# External API Keys (Required for full functionality)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Email Configuration (For notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Domain Configuration (Update with your actual domains)
FRONTEND_DOMAIN=https://your-frontend-domain.com
BACKEND_DOMAIN=https://your-backend-domain.com

# SSL Configuration (For production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key
